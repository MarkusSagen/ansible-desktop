# http://editorconfig.org

root = true

[*]
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf
indent_size = 4

[Makefile]
indent_style = tab

[*.py]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.{conf,js,json,yml,yaml,xml,md}]
indent_size = 2
